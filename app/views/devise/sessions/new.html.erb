<div class="card col-sm-5 mx-auto mt-5">
  <div class="card-body">

    <h3 class="mt-1 mb-3">ログイン</h3>
    <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <div class="form-group ">
        <%= f.label :email, "メールアドレス", :class => "form-label" %><br />
        <%= f.email_field :email, autofocus: true, :class => "form-controll col-8" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "パスワード", :class => "form-label" %><br />
        <%= f.password_field :password, autocomplete: "off", :class => "form-controll col-8" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group offset-1">
          <%= f.check_box :remember_me, :class => "form-check-input" %>
          <%= f.label :remember_me, "ログインを記録します", :class => "form-check-label" %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "ログイン", :class => "btn btn-success btn-block" %>
      </div>
    <% end %>
    <div class="mt-2">
    <%= link_to "新規登録はこちら", new_registration_path(resource_name) %>
    </div>
  </div>
</div>
