<div class="container">
  <div class="row" >
    <div class="col h5">
    <i class="fa fa-book" aria-hidden="true"></i><%= "　#{@user.nickname}さんの学習ジャンル" %>
    </div>
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">ジャンル</th>
          <th scope="col">内容</th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <th scope="row"><%= genre.id %></th>
            <td><%= link_to genre.genre, genre_path(genre.id), class: "btn btn-outline-dark btn-block" %></td>
            <td><%= genre.genre_info %><%= link_to "[編集]", edit_genre_path(genre.id), class: "text-reset" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
