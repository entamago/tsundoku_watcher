<div class="container">
  <div class="row" >
    <div class="col">
    <h5><i class="fas fa-book-open" aria-hidden="true"></i><%= "　#{@genre.genre}に関する記事" %></h5><br />
    <p><%= @genre.genre_info %></p>
    </div>
    <div class="col-12">
      <h5><%= link_to "新しい記事を作成する", "#", class: "btn btn-outline-success btn-block" %>
    </div>
    <table class="mt-3 table table-hover">
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">タイトル</th>
          <th scope="col">記事</th>
        </tr>
      </thead>
      <tbody>
          <tr>
            <th scope="row">0</th>
            <td>記事のタイトル</td>
            <td>記事の内容</td>
          </tr>
      </tbody>
    </table>
    <div class="col-12">
      <p class="text-center"><%= link_to "Topへ", root_path, class: "text-reset" %> | <%= link_to "ジャンル一覧へ", genres_path, class: "text-reset" %></p>
    </div>
  </div>
</div>
