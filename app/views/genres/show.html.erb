<div class="row  justify-content-center mt-3">
  <%= render 'shared/flash_messages' %>
</div>
<div class="container bg-white p-3">
  <div class="row" >
    <div class="col">
    <h5><i class="fas fa-book-open" aria-hidden="true"></i><%= "　#{@genre.genre}に関する記事" %></h5><br />
    <p><%= @genre.genre_info %><%= link_to "[編集]", edit_genre_path(@genre.id), class: "text-reset" %></p>
    </div>
    <div class="col-12">
      <h5><%= link_to "新しい記事を作成する", new_genre_article_path(@genre.id), class: "btn btn-outline-success btn-block" %>
    </div>
    <table class="mt-3 table table-hover">
      <thead>
        <tr>
          <th scope="col">＃</th>
          <th scope="col">タイトル</th>
          <th scope="col">記事</th>
        </tr>
      </thead>
      <tbody>
          <% @articles.each_with_index do |article, i| %>
          <tr>
            <th scope="row"><%= i + 1 %></th>
            <td><%= link_to article.title, genre_article_path(genre_id: article.genre_id, id: article.id), class: "btn btn-outline-dark btn-block" %></td>
            <td><%= article.article.truncate(50) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="col-12 d-flex justify-content-center">
      <%= paginate @articles %>
    </div>

    <div class="col-12">
      <p class="text-center"><%= link_to "Topへ", root_path, class: "text-reset" %> | <%= link_to "ジャンル一覧へ", genres_path, class: "text-reset" %></p>
    </div>
  </div>
</div>
